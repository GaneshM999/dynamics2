@model IEnumerable<dynamics2.Models.Employee>
<h2>Index</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Employee Id</th>
            <th>Employee Name</th>
            <th>EmployeeSalary</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ESalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.DId }, new { @class = "btn btn-warning" })
            </td>
        </tr>
    }

</table>

